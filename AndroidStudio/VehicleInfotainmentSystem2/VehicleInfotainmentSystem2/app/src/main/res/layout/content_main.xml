<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bestgroupever.vehicleinfotainmentsystem.Controller.Controller.MainActivity"
    tools:showIn="@layout/activity_main">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="117dp"
        android:layout_height="31dp"
        android:layout_marginEnd="40dp"
        android:text="TEMPdate"
        app:layout_constraintBottom_toTopOf="@+id/main_music_button"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.352" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="242dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:text="TempTime"
        app:layout_constraintBottom_toTopOf="@+id/main_hvac_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.997"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142" />

    <ImageView
        android:id="@+id/main_music_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="changeLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:srcCompat="@drawable/musicbutton" />

    <ImageView
        android:id="@+id/main_gps_button"
        android:layout_width="77dp"
        android:layout_height="76dp"
        android:layout_marginTop="8dp"
        android:onClick="changeLayout"
        android:src="@drawable/mapsbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.739"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.259" />

    <ImageView
        android:id="@+id/main_hvac_button"
        android:layout_width="81dp"
        android:layout_height="76dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="8dp"
        android:onClick="changeLayout"
        android:src="@drawable/hvacbutton"
        android:text="HVAC"
        app:layout_constraintBottom_toTopOf="@+id/onOffBluetooth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512" />

    <Button
        android:id="@+id/button2"
        android:layout_width="85dp"
        android:layout_height="69dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="28dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/onOffBluetooth"
        app:layout_constraintTop_toBottomOf="@+id/main_hvac_button"
        app:layout_constraintVertical_bias="0.892" />

    <Button
        android:id="@+id/button3"
        android:layout_width="87dp"
        android:layout_height="71dp"
        android:layout_marginBottom="32dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.722"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_gps_button"
        app:layout_constraintVertical_bias="0.97" />

    <Button
        android:id="@+id/onOffBluetooth"
        android:layout_width="106dp"
        android:layout_height="69dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="36dp"
        android:text="Enable/Disable Bluetooth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    //will add the buttons for the gears on this content xml file
    //Wanted to add it the main, but I think everyone used their own
    //template, which makes it more complicated for me to edit on each page

    <Button
        android:id="@+id/park"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_marginStart="553dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/gear_button_background"
        android:text="P"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/reverse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/reverse"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_marginStart="101dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/gear_button_background"
        android:text="R"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/neutral"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/onOffBluetooth"
        app:layout_constraintTop_toBottomOf="@+id/park" />

    <Button
        android:id="@+id/neutral"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_marginStart="101dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/gear_button_background"
        android:text="N"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/drive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/onOffBluetooth"
        app:layout_constraintTop_toBottomOf="@+id/reverse" />

    <Button
        android:id="@+id/drive"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_marginStart="381dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/gear_button_background"
        android:text="D"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/neutral" />
</android.support.constraint.ConstraintLayout>